@page
@model IshimweHealthcare.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="user.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="user.Username" class="form-control" name="UserName" value="@Model.user.Username" />
            </div>
            <span class="text-danger" asp-validation-for="user.Username"></span>
        </div><br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="user.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="user.Password" class="form-control" name="Password" value="@Model.user.Password" />
            </div>
            <span class="text-danger" asp-validation-for="user.Password"></span>
        </div><br />
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="user.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="user.RememberMe"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
            </div><br />
        </div>
    </form>
</div>
