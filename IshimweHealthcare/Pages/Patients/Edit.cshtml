@page
@model IshimweHealthcare.Pages.patients.EditModel
@{
}
<br />
<h2>EDIT Patient Information</h2>
@if(Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show"role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"aria-label="close"></button>
        </div>
}
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Patient_Id</label>
        <div class="col-sm-6 mb-3">
    <input type="text"  name="id" value="@Model.patientInfo.id"/>
     </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">name </label>
        <div class="col-sm-6 mb-3">
            <input type="text" class="form-control" name="name" value="@Model.patientInfo.name"/>

        </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">LastName</label>
        <div class="col-sm-6 mb-3">
            <input type="text" class="form-control" name="name" value="@Model.patientInfo.FirstName"/>

        </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6 mb-3">
            <input type="text" class="form-control" name="email" value="@Model.patientInfo.email"/>

        </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.patientInfo.phone"/>

        </div>
    </div class="row mb-3">
        <label class="col-sm-3 col-form-label">address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.patientInfo.address"/>

        </div>
         </div class="row mb-3">
        <label class="col-sm-3 col-form-label">Date OF Birth</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="createdAt" value="@Model.patientInfo.createdAt"/>

        </div>
        </div class="row mb-3">
        <label class="col-sm-3 col-form-label">Gender</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="gender" value="@Model.patientInfo.Gender"/>

        </div>
        </div class="row mb-3">
        <div class="col-sm-6">
        <label class="col-sm-3 col-form-label">InsuranceProvider</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="insura" value="@Model.patientInfo.InsuranceProvider"/>

        </div>
        <div class="col-sm-6">
        <label class="col-sm-3 col-form-label">InsuranceProviderNumber</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="number" value="@Model.patientInfo.InsurancePolicyNumber"/>

        </div>
    </div>
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@Model.successMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Admin/Index" role="button">cancel</a>
        </div>
    </div>
</form>
