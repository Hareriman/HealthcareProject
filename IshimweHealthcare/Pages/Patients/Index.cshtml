@page
@model IshimweHealthcare.Pages.patients.IndexModel
@{
}
<br/>
<h2>List of Patients</h2>
<a class='btn btn-primary btn-sm' href='/Patients/Create'>New Patient</a>
<a class='btn btn-primary btn-sm' href='/Admin/Index'>Home</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>InsuranceProviver</th>
            <th>InsuranceProviderNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listPatients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.FirstName</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.createdAt</td>
                <td>@item.Gender</td>
                <td>@item.InsuranceProvider</td>
                <td>@item.InsurancePolicyNumber</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Patients/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Patients/Delete?id=@item.id">Delete</a>


                </td>

            </tr>
        }
    </tbody>
    </table>